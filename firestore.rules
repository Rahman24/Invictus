rules_version="2"
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user} {
    	allow read, update: if request.auth != null
	       	    						&& request.auth.token.email == user;
    }
    match /new/{user} {
    	allow create: if request.auth != null
      							&& request.auth.token.email.matches('.*onlinedegree[.]iitm[.]ac[.]in$')
                    && request.auth.token.email == user;
    }
    match /events/{event} {
    	allow read: if request.auth != null;
		}
    match /{document=**} {
      allow read, write, create, update, delete, get: if request.auth.token.email=="jnrahman12@gmail.com" || request.auth.token.email=="hariharanb@hotmail.com";
    }
  }
}